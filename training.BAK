body {
  font-family: "Noto Sans JP", sans-serif;
  background: #f0f8ff;
  text-align: center;
  margin: 0;
  padding: 8px;
  font-size: 18px;
  line-height: 1.6;
}

.container {
  width: 100%;
  max-width: 480px;
  margin: auto;
  padding: 0 10px;
  background: white;
  border-radius: 12px;
  box-shadow: 0 0 16px rgba(0,0,0,0.1);
}

/* 見出し */
#top-title {
  font-size: 1.8em;
  margin: 12px 0 4px;
  color: #0044cc;
  font-weight: 800;
}

/* ロゴ */
#logo-image {
  max-width: 240px;
  width: 100%;
  height: auto;
  margin: 16px auto;
  display: block;
}

/* ボタン */
button {
  font-size: 1.1em;
  margin: 6px;
  padding: 10px 18px;
  border-radius: 8px;
  cursor: pointer;
}

button.main-button {
  background-color: #007bff;
  color: white;
  border: none;
  width: 90%;
  max-width: 320px;
  font-size: 1.2em;
  font-weight: bold;
  transition: background-color 0.2s;
}

button.main-button:hover {
  background-color: #005fc9;
}

/* 設定ボタン */
.settings-button-wrapper {
  text-align: center;
  margin-top: 10px;
}
#settings-button {
  background-color: #ddd;
  color: #333;
  border: 1px solid #aaa;
  font-weight: 600;
}

/* キャラ */
#character img {
  width: 120px;
  height: auto;
  margin-bottom: 8px;
}
#speech {
  font-size: 1.1em;
  font-weight: bold;
  margin-bottom: 12px;
}

/* ストリーク */
#streak-info {
  font-size: 1.1em;
  font-weight: bold;
  color: #2d88ff;
  margin-bottom: 8px;
}

/* トレーニング画面 */
#training-screen {
  min-height: 400px;
  padding-bottom: 12px;
}
#retry-button {
  display: block;
  margin: 8px auto;
  background-color: #def;
  border: 1px solid #79a;
  padding: 10px 20px;
  font-size: 1.1em;
  border-radius: 6px;
  cursor: pointer;
}

/* ログ */
#log {
  background: #f8faff;
  border-radius: 10px;
  padding: 8px 12px;
  margin: 12px auto;
  font-size: 1em;
  text-align: left;
}
#log h2 {
  margin: 6px 0;
  font-size: 1.2em;
  color: #003399;
}

/* モーダル */
.settings-modal {
  width: 90vw;
  max-width: 400px;
  padding: 20px;
  background: #fff;
  border-radius: 12px;
  box-shadow: 0 0 20px rgba(0,0,0,0.3);
  text-align: left;
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  z-index: 1000;
  box-sizing: border-box;
}
.settings-modal input {
  width: 100%;
  margin-bottom: 12px;
  padding: 8px;
  font-size: 1.1em;
}

/* メディア調整 */
@media screen and (max-width: 480px) {
  body { font-size: 18px; }
  #speech, #streak-info, #log p, #log h2 { font-size: 1.1em; }
  #character img { width: 100px; }
  button.main-button { font-size: 1.1em; padding: 10px; }
}

/* 共通装飾 */
#back-button {
  background-color: #eee;
  border: 1px solid #aaa;
  color: #222;
}

canvas {
  width: 100% !important;
  height: auto !important;
  max-width: 100%;
  margin-top: 16px;
}
